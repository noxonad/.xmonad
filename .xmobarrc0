Config {
    font          = "xft:inconsolata 10"
  , bgColor       = "#222222"
  , fgColor       = "#eeeeee"
  , position      = Top
  , lowerOnStart  = True
  , border        = BottomB
  , borderColor   = "#55aa55"
  , commands      =
    [ Run Date "%d.%m.%Y (%a)" "date" 10
    , Run Date "%T" "time" 10
    , Run Com "bash" ["/home/vlad-arch/.xmonad/scripts/batteryr.sh", "BAT0", "10", "true"] "bat_r" 30
    , Run Com "bash" ["/home/vlad-arch/.xmonad/scripts/batteryl.sh", "BAT0", "10", "true"] "bat_l" 30
    , Run Com "bash" ["/home/vlad-arch/.xmonad/scripts/audio.sh", "12", "true"] "audio" 10
    , Run Com "bash" ["/home/vlad-arch/.xmonad/scripts/language.sh"] "language" 10
    , Run UnsafeXPropertyLog "_XMONAD_LOG_0"
    ] 
  , sepChar = "%"
  , alignSep = "}{"
  , template = "%_XMONAD_LOG_0% } %bat_l% %time% %bat_r% { %audio% %date% %language%
}
